{% extends "govuk/template.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block head %}
	{% include "./applicationInsightsScript.njk" %}

  <link href="/assets/stylesheets/application.css?{{ version }}" rel="stylesheet"/>

{% endblock %}

{% block pageTitle %}{{pageTitle | default(applicationName)}}
{% endblock %}

{% block header %}
  {% include "./header.njk" %}
{% endblock %}

{% block bodyStart %}{% endblock %}

{% block footer %}
  {{ govukFooter({
    classes: 'govuk-footer govuk-!-display-none-print',
    meta: {
      items: [
        {
          href: "/privacy-notice",
          text: "Privacy notice"
        },
        {
          href: "/cookies",
          text: "Cookies policy"
        },
        {
          href: "/accessibility-statement",
          text: "Accessibility statement"
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script nonce="{{ cspNonce }}" type="module" src="/assets/govukMoJFrontendInit.js"></script>

  {% block extraScripts %}{% endblock %}
{% endblock %}
